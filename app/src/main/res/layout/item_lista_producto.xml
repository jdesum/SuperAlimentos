<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cvListaProducto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        >

        <ImageView
            android:id="@+id/imgProducto"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/img_baya_acai_min"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/imgProducto"
            android:maxLength="65"
            android:maxLines="1"
            android:text="Bayas de Acai"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvUnidadesInventario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvNombre"
            android:layout_toRightOf="@+id/imgProducto"
            android:text="55 u."
            android:textSize="12sp"

            />

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvUnidadesInventario"
            android:layout_alignBottom="@+id/imgProducto"
            android:text="10.00 â‚¬"
            android:textSize="16sp"
             />

    </RelativeLayout>

</android.support.v7.widget.CardView>

